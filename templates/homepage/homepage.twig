{% extends 'layout.twig' %}

{% block title %} <title>Accueil | {{ parent () }}</title> {% endblock %}
{% block css %} <link rel="stylesheet" href="/assets/css/homepage.css{{ _self.cssVersionning() }}"> {% endblock %}

{% block content %}
    <header>
        <nav class='nav'>
            <a href="{{ path('homepage') }}" class="links"><img id="logo" src="/assets/img/logo/logo.jpg" alt="Logo" height="100"></a>
            <div class="right">
                <a href="{{ path('createSpendingProfilePost') }}" class="links" id="logout"><i class="fa-solid fa-plus"></i></a>
                <a href="{{ path('logout') }}" class="links" id="logout"><i class="fa-solid fa-right-from-bracket"></i></a>
            </div>
        </nav>
    </header>
    <div class="container-fluid" id="homepage">
        <h1 class="text-center mb-5 h1" > Profils de d√©penses </h1>
        {% if totalSpendingProfiles == 0 %}
            <a href="{{ path('createSpendingProfileGet') }}" class="text-center" id="add_spending_profile"><i class="fa-solid fa-plus fa-beat"></i></a>
            {% else %}
            <div class="spendingProfile">
                {% for spendingProfile in spendingProfiles %}
                    <a href="{{ path('spendingProfileGet',{ slug:spendingProfile.slug }) }}" class="card">
                        <h2 class="h2">{{spendingProfile.name}}</h2>
                        <p class="description">{{spendingProfile.description}}</p>
                    </a>

                {% endfor %}
            </div>
        {% endif %}

    </div>
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/randomColor.js"></script>
{% endblock %}